<p id="notice"><%= notice %></p>

<h1 class="text-center pt-5">ポエム一覧</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= truncate(post.title, length: 10) %></td>
        <td><%= truncate(post.content, length: 30) %></td>
        <td><%= link_to '画像', post, class: "btn btn-link" %></td>
        <td><%= link_to '編集', edit_post_path(post), class: "btn btn-link" %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center"><%= link_to 'New Post', new_post_path, class: "btn btn-info" %></div>


