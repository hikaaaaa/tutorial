<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center pt-5">ポエム一覧</h1>
<div class="container">
  <div class="text-right">
　    <%= search_form_for @search do |f| %>
      <%= f.label :title_cont, "キーワードから探す" %>
      <%= f.search_field :title_or_content_cont %>
    　　<%= f.submit "検索", class: "btn btn-outline-success" %>
    <% end %>
  </div>
  <div class="text-left pb-3">
    <%= link_to '新規投稿', new_post_path, class: "btn btn-info" %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= truncate(post.title, length: 10) %></td>
        <td><%= truncate(post.content, length: 30) %></td>
        <td><%= link_to post do %>
          <i class="fas fa-camera-retro fa-3x pb-1 ml-3"></i>
                    <% end %></td>
        <td><%= link_to '編集', edit_post_path(post), class: "btn btn-secondary" %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



